@startuml
skinparam linetype ortho
skinparam classBackgroundColor #B2C9AB

abstract class Handler {
    # next: Handler*
    + setNext(nextHandler: Handler*): void
    + {abstract} handleRequest(request: int): void
}
class ConcreteHandler1 {
    + handleRequest(request: int): void
}
class ConcreteHandler2 {
    + handleRequest(request: int): void
}
class Client {
    + sendRequest(handler: Handler*, request: int): void
}

Handler <|-- ConcreteHandler1
Handler <|-- ConcreteHandler2
Handler --> "next" Handler
Client ..> Handler
@enduml
